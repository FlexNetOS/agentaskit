#!/bin/bash
# Pre-push hook for cross-reference validation
set -e
echo "Running pre-push validation..."
SOT_FILE="core/src/orchestration/sot.md"
if [ -f "$SOT_FILE" ]; then
    echo "✓ SoT file present"
fi
HASHES_FILE="operational_hash/HASHES.txt"
if [ -f "$HASHES_FILE" ]; then
    echo "✓ HASHES file present"
fi
echo "✓ Pre-push validation complete"
exit 0

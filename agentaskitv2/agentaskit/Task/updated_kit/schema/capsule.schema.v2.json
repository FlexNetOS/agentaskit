{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NOA Capsule v2",
  "type": "object",
  "required": [
    "id",
    "name",
    "layer",
    "scope",
    "inputs",
    "outputs",
    "tools",
    "guardrails",
    "escalation_to"
  ],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "layer": {
      "type": "string",
      "enum": [
        "cecca",
        "board",
        "executive",
        "stack_chief",
        "specialist",
        "micro"
      ]
    },
    "scope": {
      "type": "array",
      "items": { "type": "string" }
    },
    "inputs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "outputs": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tools": {
      "type": "array",
      "items": { "type": "string" }
    },
    "guardrails": {
      "type": "array",
      "items": { "type": "string" }
    },
    "escalation_to": { "type": "string" },

    "metadata": {
      "type": "object",
      "properties": {
        "agent_code": { "type": "string" },
        "agent_id": { "type": "string" },
        "display_name": { "type": "string" },
        "aka": { "type": "string" },
        "type": { "type": "string" },
        "category": { "type": "string" },
        "subcategory": { "type": "string" },
        "epic": { "type": "string" },
        "operations_domain": { "type": "string" },
        "owner_role": { "type": "string" },
        "raci_r": { "type": "string" },
        "raci_a": { "type": "string" },
        "raci_c": { "type": "string" },
        "raci_i": { "type": "string" },
        "human_approval_required": { "type": "string" },
        "escalation_policy": { "type": "string" },
        "court_gate": { "type": "string" },
        "risk_class": { "type": "string" },
        "purpose": { "type": "string" },
        "capabilities": { "type": "string" },
        "capability_pack": { "type": "string" },
        "plane": { "type": "string" },
        "triggers": { "type": "array", "items": { "type": "string" } },
        "artifacts": { "type": "array", "items": { "type": "string" } },
        "actions": { "type": "array", "items": { "type": "string" } },
        "tools_stack": { "type": "array", "items": { "type": "string" } },
        "data_sources": { "type": "array", "items": { "type": "string" } },
        "connectors": { "type": "array", "items": { "type": "string" } },
        "endpoints": { "type": "array", "items": { "type": "string" } },
        "commands": { "type": "array", "items": { "type": "string" } },
        "code_paths": { "type": "array", "items": { "type": "string" } },
        "manifests": { "type": "array", "items": { "type": "string" } },
        "policies": { "type": "array", "items": { "type": "string" } },
        "models": { "type": "array", "items": { "type": "string" } },
        "embedding_models": { "type": "array", "items": { "type": "string" } },
        "memory_scope": { "type": "string" },
        "state_store": { "type": "string" },
        "cache": { "type": "string" },
        "scheduling": { "type": "string" },
        "sla": { "type": "string" },
        "metrics": { "type": "string" },
        "telemetry": { "type": "string" },
        "status": { "type": "string" },
        "version": { "type": "string" },
        "created_at": { "type": "string" },
        "last_updated": { "type": "string" },
        "governance_role": { "type": "string" },
        "scheduler_owner": { "type": "string" },
        "spawn_policy": { "type": "string" },
        "court_policy_id": { "type": "string" },
        "capability_pack_id": { "type": "string" },
        "efg_requirements": { "type": "string" },
        "cost_center": { "type": "string" },
        "budget_cap": { "type": "string" },
        "telemetry_topic": { "type": "string" }
      },
      "additionalProperties": true
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "depends_on_agents": { "type": "array", "items": { "type": "string" } },
        "provides_capabilities": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "governance": {
      "type": "object",
      "properties": {
        "risk_class": { "type": "string" },
        "failure_modes": { "type": "string" },
        "auto_remediation": { "type": "string" },
        "audit_logging": { "type": "string" },
        "pii_handling": { "type": "string" },
        "security_level": { "type": "string" },
        "export_control": { "type": "string" },
        "license_category": { "type": "string" },
        "maturity_level": { "type": "string" },
        "autonomy_level": { "type": "string" },
        "operational_readiness_score": { "type": "string" }
      },
      "additionalProperties": true
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "sla": { "type": "string" },
        "metrics": { "type": "string" },
        "telemetry": { "type": "string" }
      },
      "additionalProperties": true
    },
    "compression": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "strategy": { "type": "string" }
      }
    },
    "upgrade": {
      "type": "object",
      "properties": {
        "policy": { "type": "string" },
        "last_upgraded": { "type": "string" }
      }
    },
    "integration": {
      "type": "object",
      "properties": {
        "links": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}